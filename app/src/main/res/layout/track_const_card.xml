<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="listItem"
            type="com.example.rickylagerkvist.sporifyapi.models.TrackObject"/>
    </data>

    <android.support.constraint.ConstraintLayout
        android:padding="8dp"
        android:id="@+id/track_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            app:image="@{listItem.getSmallCoverArt}"
            android:id="@+id/track_card_imageView"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:text="@{listItem.name}"
            android:layout_width="wrap_content"
            android:maxLines="1"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:id="@+id/trackTextView"
            app:layout_constraintLeft_toRightOf="@+id/track_card_imageView" />

        <TextView
            android:maxLines="1"
            android:text="@{listItem.album.name}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/albumTextView"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintTop_toBottomOf="@+id/trackTextView"
            app:layout_constraintLeft_toRightOf="@+id/track_card_imageView" />

        <TextView
            android:maxLines="1"
            android:text="@{listItem.getJoinTrack}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/artistTextView"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintTop_toBottomOf="@+id/albumTextView"
            app:layout_constraintLeft_toRightOf="@+id/track_card_imageView"  />

    </android.support.constraint.ConstraintLayout>

</layout>
