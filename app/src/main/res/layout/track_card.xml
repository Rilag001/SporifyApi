<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/track_layout"
    android:padding="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:id="@+id/track_card_imageView"/>

    <TextView
        android:text="TextView"
        android:layout_toRightOf="@id/track_card_imageView"
        android:layout_toEndOf="@+id/track_card_imageView"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_width="wrap_content"
        android:maxLines="1"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:id="@+id/trackTextView"/>

    <TextView
        android:text="TextView"
        android:maxLines="1"
        android:layout_toRightOf="@id/track_card_imageView"
        android:layout_toEndOf="@+id/track_card_imageView"
        android:layout_below="@id/trackTextView"
        android:layout_width="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_height="wrap_content"
        android:id="@+id/albumTextView"/>

    <TextView
        android:text="TextView"
        android:maxLines="1"
        android:layout_toRightOf="@id/track_card_imageView"
        android:layout_toEndOf="@+id/track_card_imageView"
        android:layout_below="@id/albumTextView"
        android:layout_width="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_height="wrap_content"
        android:id="@+id/artistTextView"/>

</RelativeLayout>
