<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".mvvmTest.searchTracks.SearchTrackListFragment">

    <data>
        <variable name="viewModel" type="com.example.rickylagerkvist.sporifyapi.mvvmTest.searchTracks.SearchTrackViewModel"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/searchStack"
            android:orientation="horizontal">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:imeOptions="actionSearch"
                android:inputType="textFilter"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:id="@+id/searchEditText" />

            <Button
                android:id="@+id/searchButton"
                android:onClick="@{viewModel.onSearchTrack()}"
                android:layout_weight="4"
                android:padding="5dp"
                android:text="@string/search"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"/>

        </LinearLayout>

        <LinearLayout
            android:layout_below="@id/searchStack"
            android:id="@+id/no_internet_layout"
            android:visibility="gone"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/ic_search_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_gravity="center"
                android:text="@string/no_track_found"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/swipeRefreshLayout"
            android:layout_width="match_parent"

            android:layout_below="@+id/no_internet_layout"
            android:layout_height="match_parent">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/trackRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </android.support.v7.widget.RecyclerView>

        </android.support.v4.widget.SwipeRefreshLayout>

    </RelativeLayout>

</layout>

