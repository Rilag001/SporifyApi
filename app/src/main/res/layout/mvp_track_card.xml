<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    android:padding="8dp"
    android:id="@+id/mvp_track_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:id="@+id/mvp_track_card_imageView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:maxLines="1"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:ellipsize="marquee"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:id="@+id/mvp_trackTextView"
        app:layout_constraintLeft_toRightOf="@+id/mvp_track_card_imageView" />

    <TextView
        android:maxLines="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mvp_albumTextView"
        android:ellipsize="marquee"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toBottomOf="@+id/mvp_trackTextView"
        app:layout_constraintLeft_toRightOf="@+id/mvp_track_card_imageView" />

    <TextView
        android:maxLines="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mvp_artistTextView"
        android:ellipsize="marquee"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toBottomOf="@+id/mvp_albumTextView"
        app:layout_constraintLeft_toRightOf="@+id/mvp_track_card_imageView"  />

</android.support.constraint.ConstraintLayout>