<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.rickylagerkvist.sporifyapi.trackdetails.TrackDetailFragment"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="viewModel" type="com.example.rickylagerkvist.sporifyapi.trackdetails.DetailTrackViewModel"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageUrl"
            app:image="@{viewModel.getImageUrl}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_below="@id/imageUrl"
            android:layout_margin="8dp"
            android:textAllCaps="true"
            android:textSize="30sp"
            text="@{viewModel.getTitle}"
            android:id="@+id/track_name_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</layout>

